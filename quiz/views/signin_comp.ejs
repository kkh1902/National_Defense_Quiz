<div class="page" style="height: auto;">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="row" style="margin-top: 25vh;">
        <div class="col">
          <div class="card" style="height: 50vh; margin-bottom: 16px;">
            <h3 class="card-title">Notice</h3><br>
            <div class="notice important">
              <span>중요 공지입니다.</span>
              <span style="vertical-align: middle; float: right;">
                <span class="material-icons-round" style="vertical-align: middle;">visibility</span> 1000&nbsp;&nbsp;
                <span class="material-icons-round" style="vertical-align: middle;">calendar_today</span> 2022-07-28
              </span>
            </div>
            <% for(var i=0; i < 5; i++ ) {%>
              <div class="notice">
                <span>공지입니다.</span>
                <span style="vertical-align: middle; float: right;">
                  <span class="material-icons-round" style="vertical-align: middle;">visibility</span> 1000&nbsp;&nbsp;
                  <span class="material-icons-round" style="vertical-align: middle;">calendar_today</span> 2022-07-28
                </span>
              </div>
              <% } %>
          </div>
        </div>
        <div class="col-4">
          <form action="signin" method="post">
            <div class="card" style="height: 50vh; margin-bottom: 16px;">
              <h3 class="card-title">Login</h3><br>
              <p class="card-subtitle" style="text-align: start;">아이디</p>
              <% if(!uidState) { %>
              <input class="card-input-text-err" name="uid" type="text" placeholder="아이디를 입력하세요."><br>
              <% } else { %>
                <input class="card-input-text" name="uid" type="text" placeholder="아이디를 입력하세요."><br>
              <% } %>
                <p class="card-subtitle" style="text-align: start;">비밀번호</p>
              <% if(!upwState) { %>
                <input class="card-input-text-err" name="upw" type="password" placeholder="비밀번호를 입력하세요."><br>
              <% } else { %>
                <input class="card-input-text" name="upw" type="password" placeholder="비밀번호를 입력하세요."><br>
              <% } %>
              <input class="card-btn-signin" type="submit" value="로그인">
              <p class="card-subtitle" style="text-align: start;">아이디가 없으신가요? <span></span></p>
              <button class="card-btn-signin" onclick="location.href='signup'">회원가입하기</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
</div>